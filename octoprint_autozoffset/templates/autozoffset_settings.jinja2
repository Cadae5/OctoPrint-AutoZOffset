<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">Limit Switch X</label>
        <div class="controls">
            <input type="number" step="0.1" class="input-mini" data-bind="value: settings.plugins.autozoffset.switch_x">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Limit Switch Y</label>
        <div class="controls">
            <input type="number" step="0.1" class="input-mini" data-bind="value: settings.plugins.autozoffset.switch_y">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Reference Height Difference</label>
        <div class="controls">
            <input type="number" step="0.01" class="input-mini" data-bind="value: settings.plugins.autozoffset.reference_height">
            <span class="help-inline">Height difference between switch and bed (mm)</span>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button class="btn btn-primary" data-bind="click: calibrate_z_offset">Auto Calibrate Z-Offset</button>
        </div>
    </div>
</form>
